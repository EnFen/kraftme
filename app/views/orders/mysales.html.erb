<%# view for user products %>
<h1>My Sales</h1>

<table>
  <thead>
    <tr>
      <th>Product title</th>
      <th>Price</th>
      <th>Image</th>
      <th>Bought from</th>
      <th>Sold to</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mysales.each do |order| %>
      <tr>
        <td><%= order.product_title %></td>
        <td><%= order.price %></td>
        <td>  <% if order.product.image.attached? %>
        <%= cl_image_tag(order.product.image.key, :width=>100, :crop=>"fit") %>
        <% end %></td>
        <td><%= order.buyer.username %></td>
        <td><%= order.seller.username %></td> 
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>