<!DOCTYPE html>
<html>
  <head>
    <title>Kraftme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    
    <% if user_signed_in? %>
      <h4>Logged in as <%= current_user.email %></h4>
            <p><%= link_to 'Home', products_path %></p>
      <p><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
      <p><%= link_to 'Update Profile', edit_user_registration_path %></p>
       <%# link for user products %>
      <p><%= link_to 'My Artworks for Sale', userproducts_path(current_user) %></p>
      <p><%= link_to 'My Purchases', myorders_path(current_user) %></p>
        <p><%= link_to 'My Fulfilled Sales', mysales_path(current_user) %></p>
      <%# link to current users message inbox %>
      <p><%= link_to 'My Messages' , conversations_path %></p>
    <% else %>
      <%= link_to 'Login or Sign Up!', new_user_session_path %>
    <% end %>
             <% if current_user.is_admin? %>
    <p><%= link_to 'Admin - All Artworks', admin_index_path %></p>
    <p><%= link_to 'Admin - All Transactions', orders_path %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
